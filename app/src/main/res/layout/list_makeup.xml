<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <ImageView
        android:src="@android:color/darker_gray"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/foto_makeup"
        android:layout_margin="15dp"
        android:layout_marginEnd="15dp"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/foto_makeup"
        android:layout_toEndOf="@id/foto_makeup"
        android:layout_marginTop="30dp"
        android:orientation="vertical">
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Make Up"
            android:textColor="@android:color/black"
            android:id="@+id/nama_makeup"
            android:textSize="23sp"
            android:maxLines="2"
            android:layout_marginLeft="10dp"
            android:ellipsize="end"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deskripsi Make Up"
            android:id="@+id/desk_makeup"
            android:layout_marginLeft="10dp"
            android:maxLines="2"
            android:textSize="18sp"
            android:ellipsize="end"/>

    </LinearLayout>

</RelativeLayout>